@model BlogViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic form elements</h4>
                        <p class="card-description"> Basic form elements </p>
                        <form class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputName1">Blog Başlığı</label>
                                <input asp-for="BlogTitle" type="text" class="form-control" id="exampleInputName1">
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectGender">Kategori</label>
                                <select class="form-control" id="exampleSelectGender" asp-items="@ViewBag.Categories">
                                </select>
                            </div>
                            <div class="form-group text-center">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="col-12"><strong>Kapak Resmi</strong></label>
                                        <img src="@Model.BlogThumbnailImage" class="w-75" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="col-12"><strong>İçerik Resmi</strong></label>
                                        <img src="@Model.BlogImage" class="w-75" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kapak Resmi</label>
                                <input type="file" name="img[]" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>İçerik Resmi</label>
                                <input type="file" name="img[]" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea1">İçerik</label>
                                <textarea asp-for="BlogContent" class="form-control" id="exampleTextarea1" rows="50"></textarea>
                            </div>
                            <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

