@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AllBlogsLayout.cshtml";
}

<div class="col-lg-6">
    <div class="sidebar-item submit-comment">
        <div class="sidebar-heading">
            <h2>Yorumunuz</h2>
        </div>
        <div class="content">
            <form asp-action="Login" asp-controller="Account">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset>
                            <input  type="text" asp-for="Username" placeholder="Kullanıcı Adı" required="">
                        </fieldset>
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <fieldset>
                            <input type="password" asp-for="Password" placeholder="Şifre" required="">
                        </fieldset>
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <button type="submit" id="form-submit"  class="main-button">Gönder</button>
                        </fieldset>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

