@model CommentViewModel

<div class="col-lg-12">
    <div class="sidebar-item submit-comment">
        <div class="sidebar-heading">
            <h2>Your comment</h2>
        </div>
        <div class="content">
            <form id="comment" asp-controller="Comment" asp-action="AddComment" method="post">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <input asp-for="BlogId" type="hidden" value="@Model.BlogId">
                        <fieldset>
                            <input asp-for="CommentUserName" type="text" id="name" placeholder="Your name" required="">
                        </fieldset>
                    </div>
                    <div class="col-md-6 col-sm-12">
                    <fieldset>
                        <input asp-for="CommentEmail" type="text" id="email" placeholder="Your email" required="">
                    </fieldset>
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <textarea asp-for="CommentContent" rows="6" id="message" placeholder="Type your comment" required=""></textarea>
                        </fieldset>
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <button type="submit" id="form-submit" class="main-button">Gönder</button>
                        </fieldset>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>